<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name='MainButton' parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent </item>
        <item name="android:layout_height">0dp </item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/buttom_left </item>
        <item name="android:layout_marginRight">@dimen/buttom_right </item>
        <item name="android:layout_marginTop">@dimen/margin_top </item>
        <item name="android:layout_marginBottom"> 8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">?attr/colorOnSecondary </item>
        <item name="android:textSize"> @dimen/menu_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name='MainHeadText'>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name='SettingsScreenText'>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingLeft">@dimen/padding_left_settings_text</item>
        <item name="android:paddingTop">@dimen/padding_top_settings_text</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_settings_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name='SettingsScreenIcons'>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint"> ?attr/colorPrimaryVariant </item>
    </style>



    <style name='HeadText'>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">64dp </item>
        <item name="android:layout_marginTop">14dp </item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name='BackIconHead'>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp </item>
        <item name="android:layout_marginTop">20dp </item>
        <item name="android:tint"> ?attr/colorPrimaryVariant  </item>
    </style>
    <style name='MainLineout'>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">"@color/black" </item>

    </style>

    <style name="ic_clear">
        <item name="android:layout_width">wrap_content </item>
        <item name="android:layout_height">wrap_content </item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@color/black</item>
    </style>


    <style name="track_name">
        <item name="android:fontFamily"> @font/ys_display_regular </item>
        <item name="android:textColor"> @color/white</item>
        <item name="android:textSize"> 16sp </item>
        <item name="android:layout_width">@dimen/track_name_frame_width </item>
        <item name="android:layout_height">@dimen/track_name_frame_height</item>
        <item name="android:layout_marginStart">@dimen/track_name_frame_marginStart</item>
        <item name="android:layout_marginTop">@dimen/track_name_frame_marginTop</item>
    </style>

    <style name="artist_time_track">

        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:textSize"> 11sp </item>
        <item name="android:fontFamily"> @font/ys_display_regular </item>
        <item name="android:maxLines"> 1 </item>
        <item name="android:ellipsize"> end </item>
    </style>

    <style name="ellipse_devider">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/white</item>
    </style>
</resources>