<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rcTrackList"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
    android:layout_width="45dp"
    android:layout_height="45dp"
        android:layout_marginTop="8dp"
    android:elevation="0dp"
    app:cardCornerRadius="@dimen/art_work_corners"
    app:cardBackgroundColor="@android:color/transparent">


    <ImageView
        android:id="@+id/playlistCoverImage"
        android:layout_width="@dimen/art_work_width"
        android:layout_height="@dimen/art_work_height"
        android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/playlistName"
            tools:text="Song #1"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"/>

            <TextView

                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:id="@+id/numberOfTracks"
                style="@style/artist_time_track"
                android:layout_gravity="bottom|start"
                tools:text="The Beatles" />

    </LinearLayout>
</LinearLayout>